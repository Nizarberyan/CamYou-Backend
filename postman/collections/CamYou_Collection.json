                                    "    pm.environment.set(\"token\", jsonData.token);",
                                    "    console.log(\"Token set automatically from Login response\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"password123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/users/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "users",
                                "login"
                            ]
                        }
                    },
                    "response": []
